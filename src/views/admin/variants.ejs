<%- include('../admin/dashboard.ejs') %>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
  <link rel="stylesheet" href="/css/utils/sweetAlertAdmin.css">
  <link rel="stylesheet" href="/css/utils/toastify.css">
  <link rel="stylesheet" href="/css/admin/table.css">
  <link rel="stylesheet" href="/css/utils/error.css">
  <link rel="stylesheet" href="/css/admin/results.css">
  <link rel="stylesheet" href="/css/utils/state.css">

  <div class="main-content">
    <header class="header">
      <h1>Gestión de Variantes</h1>
    </header>

    <main class="main-content-area">
      <div class="card">
        <div class="card-header">
          <h2>Lista de Variantes</h2>
          <div class="search-container">
            <input type="text" id="searchVariantInput" placeholder="Buscar variantes..." class="input-search" />
            <i class="fa fa-search search-icon"></i>
          </div>
          <button id="addVariantBtn" class="add-button">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6">
              </path>
            </svg>
            Añadir Variante
          </button>
        </div>

        <div class="table-container">
          <table class="product-table">
            <thead>
              <tr>
                <th>id</th>
                <th>Producto</th>
                <th>Color</th>
                <th>Cantidad</th>
                <th>Imagen</th>
                <th>Estado</th>
                <th style="width: 5%">Acciones</th>
              </tr>
            </thead>
            <tbody id="variantsTableBody"></tbody>
          </table>
        </div>
      </div>
  </div>

  <div id="variantModal" class="modal-overlay">
    <div class="modal-content">
      <h3 id="modalTitle" class="modal-title">Añadir Nueva Variante</h3>
      <form id="variantForm" class="modal-form">
        <input type="hidden" id="variantId">
        <div class="form-group">
          <label for="productoInput">Producto:</label>
          <input type="text" id="productoInput" name="producto_nombre" autocomplete="off">
          <div id="sugerenciasProducto" class="suggestions-list"></div>
          <div class="error-text" data-error-for="producto_id"></div>
        </div>

        <div class="form-group">
          <label for="variantColor">Color:</label>
          <input type="text" id="variantColor" name="color">
          <div class="error-text" data-error-for="color"></div>
        </div>
        <div class="form-group">
          <label for="variantStock">Stock:</label>
          <input type="number" id="variantStock" name="stock" min="0">
          <div class="error-text" data-error-for="stock"></div>
        </div>
        <div class="form-group">
          <label for="variantImg">Imagen (URL):</label>
          <input type="text" id="variantImg" name="img" placeholder="https://...">
          <div class="error-text" data-error-for="img"></div>
        </div>
        <div class="form-group">
          <label for="variantImgFile">Imagen (Archivo):</label>
          <div class="file-input-wrapper">
            <input type="file" id="variantImgFile" name="imgFile" accept="image/png, image/jpeg">
            <button type="button" id="clearImgFileBtn" class="clear-file-btn">❌</button>
          </div>
          <div class="error-text" data-error-for="img"></div>
        </div>
        <div class="modal-buttons">
          <button type="button" id="cancelModalBtn" class="cancel-button">
            Cancelar
          </button>
          <button type="submit" class="save-button">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>

  <style>
    .clear-file-btn {
    position: absolute;
    right: 6px;
    top: 50%;
    transform: translateY(-50%);
    background-color: #e74c3c;
    color: white;
    border: none;
    padding: 2px 6px;
    font-size: 12px;
    border-radius: 4px;
    cursor: pointer;
    z-index: 2;
}

.clear-file-btn:hover {
    background-color: #c0392b;
}
  </style>

  <script type="module" src="/js/admin/products/variantsProducts.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  <script src="https://unpkg.com/feather-icons"></script>