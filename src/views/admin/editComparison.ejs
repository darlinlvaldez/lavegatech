<%- include('../admin/dashboard.ejs') %>

<link rel="stylesheet" href="/css/adminComparison.css">

<div class="main-content">
    <div class="header">
        <h1>Panel de Administración de Dispositivos</h1>
    </div>

    <div class="main-content-area">
        <div class="card">
            <div class="device-management-container">
                <div class="device-info-section">
                    <h2>Dispositivo Actual: <span id="device-model">Samsung Galaxy S24 Ultra</span></h2>
                    <div class="grid-layout">
                        <div class="form-group">
                            <label for="device-name">Nombre del Dispositivo</label>
                            <input type="text" id="device-name" name="nombre" value="Samsung Galaxy S24 Ultra">
                        </div>
                    </div>
                    <div class="button-group">
                        <button class="save-button">Guardar Cambios Básicos</button>
                    </div>
                </div>

                <div class="tab-nav">
                    <button class="tab-button" data-tab="display">Pantalla</button>
                    <button class="tab-button" data-tab="camera">Cámara</button>
                    <button class="tab-button" data-tab="processor">Procesador</button>
                    <button class="tab-button" data-tab="battery">Batería</button>
                    <button class="tab-button" data-tab="connectivity">Conectividad</button>
                    <button class="tab-button" data-tab="design">Diseño y Dimensiones</button>
                    <button class="tab-button" data-tab="software">Software</button>
                    <button class="tab-button" data-tab="storage">Almacenamiento</button>
                    <button class="tab-button" data-tab="memory">Memoria RAM</button>
                </div>

                    <div id="display" class="tab-content">
                        <h3>Especificaciones de Pantalla</h3>
                        <div class="grid-layout">
                            <div class="form-group">
                                <label for="screen-size">Tamaño (pulgadas)</label>
                                <input type="text" id="screen-size" name="tamaño" value="6.8">
                            </div>
                            <div class="form-group">
                                <label for="screen-resolution">Resolución</label>
                                <input type="text" id="screen-resolution" name="resolucion" value="3120 x 1440">
                            </div>
                            <div class="form-group">
                                <label for="screen-type">Tipo</label>
                                <input type="text" id="screen-type" name="tipo" value="Dynamic AMOLED 2X">
                            </div>
                            <div class="form-group">
                                <label for="screen-refresh">Frecuencia de refresco</label>
                                <input type="text" id="screen-refresh" name="frecuencia" value="120Hz">
                            </div>
                            <div class="form-group">
                                <label for="screen-protection">Protección</label>
                                <input type="text" id="screen-protection" name="proteccion" value="Gorilla Glass Victus 2">
                            </div>
                        </div>
                        <div class="button-group">
                            <button class="save-button">Guardar Pantalla</button>
                        </div>
                    </div>

                    <div id="camera" class="tab-content">
                        <h3>Especificaciones de Cámara</h3>
                        <div class="grid-layout">
                            <div class="form-group">
                                <label for="camera-main">Cámara principal</label>
                                <input type="text" id="camera-main" name="principal" value="200 MP, f/1.7">
                            </div>
                            <div class="form-group">
                                <label for="camera-selfie">Cámara frontal</label>
                                <input type="text" id="camera-selfie" name="selfie" value="12 MP, f/2.2">
                            </div>
                            <div class="form-group">
                                <label for="camera-video">Grabación de video</label>
                                <input type="text" id="camera-video" name="video" value="8K@30fps">
                            </div>
                        </div>
                        <div class="button-group">
                            <button class="save-button">Guardar Cámara</button>
                        </div>
                    </div>

                    <div id="processor" class="tab-content">
                        <h3>Especificaciones del Procesador</h3>
                        <div class="grid-layout">
                            <div class="form-group">
                                <label for="cpu-name">Modelo CPU</label>
                                <input type="text" id="cpu-name" name="nombre" value="Snapdragon 8 Gen 3">
                            </div>
                            <div class="form-group">
                                <label for="cpu-cores">Núcleos</label>
                                <input type="text" id="cpu-cores" name="nucleos" value="Octa-core">
                            </div>
                            <div class="form-group">
                                <label for="cpu-speed">Velocidad</label>
                                <input type="text" id="cpu-speed" name="velocidad" value="3.39 GHz">
                            </div>
                        </div>
                        <div class="button-group">
                            <button class="save-button">Guardar Procesador</button>
                        </div>
                    </div>

                    <div id="battery" class="tab-content">
                        <h3>Especificaciones de Batería</h3>
                        <div class="grid-layout">
                            <div class="form-group">
                                <label for="battery-capacity">Capacidad</label>
                                <input type="text" id="battery-capacity" name="capacidad" value="5000 mAh">
                            </div>
                            <div class="form-group">
                                <label for="battery-type">Tipo</label>
                                <input type="text" id="battery-type" name="tipo" value="Li-Ion">
                            </div>
                            <div class="form-group">
                                <label for="battery-fast">Carga rápida</label>
                                <input type="text" id="battery-fast" name="carga_rapida" value="45W">
                            </div>
                            <div class="form-group">
                                <label for="battery-wireless">Carga inalámbrica</label>
                                <select id="battery-wireless" name="carga_inalambrica">
                                    <option value="1">Sí</option>
                                    <option value="0">No</option>
                                </select>
                            </div>
                        </div>
                        <div class="button-group">
                            <button class="save-button">Guardar Batería</button>
                        </div>
                    </div>

                    <div id="connectivity" class="tab-content">
                        <h3>Conectividad</h3>
                        <div class="grid-layout">
                            <div class="form-group">
                                <label for="connectivity-network">Red</label>
                                <input type="text" id="connectivity-network" name="red" value="5G, LTE">
                            </div>
                            <div class="form-group">
                                <label for="connectivity-wifi">Wi-Fi</label>
                                <input type="text" id="connectivity-wifi" name="wifi" value="Wi-Fi 6E">
                            </div>
                            <div class="form-group">
                                <label for="connectivity-bluetooth">Bluetooth</label>
                                <input type="text" id="connectivity-bluetooth" name="bluetooth" value="5.3">
                            </div>
                            <div class="form-group">
                                <label for="connectivity-nfc">NFC</label>
                                <select id="connectivity-nfc" name="nfc">
                                    <option value="1">Sí</option>
                                    <option value="0">No</option>
                                </select>
                            </div>
                        </div>
                        <div class="button-group">
                            <button class="save-button">Guardar Conectividad</button>
                        </div>
                    </div>

                    <div id="design" class="tab-content">
                        <h3>Diseño y Dimensiones</h3>
                        <div class="grid-layout">
                            <div class="form-group">
                                <label for="design-height">Altura (mm)</label>
                                <input type="text" id="design-height" name="altura" value="162.3">
                            </div>
                            <div class="form-group">
                                <label for="design-width">Anchura (mm)</label>
                                <input type="text" id="design-width" name="anchura" value="79.0">
                            </div>
                            <div class="form-group">
                                <label for="design-thickness">Grosor (mm)</label>
                                <input type="text" id="design-thickness" name="grosor" value="8.6">
                            </div>
                            <div class="form-group">
                                <label for="design-weight">Peso (g)</label>
                                <input type="text" id="design-weight" name="peso" value="232">
                            </div>
                        </div>
                        <div class="button-group">
                            <button class="save-button">Guardar Diseño</button>
                        </div>
                    </div>

                    <div id="software" class="tab-content">
                        <h3>Software</h3>
                        <div class="grid-layout">
                            <div class="form-group">
                                <label for="software-os">Sistema Operativo</label>
                                <input type="text" id="software-os" value="Android 14">
                            </div>
                            <div class="form-group">
                                <label for="software-ui">Interfaz</label>
                                <input type="text" id="software-ui" value="One UI 6.1">
                            </div>
                        </div>
                        <div class="button-group">
                            <button class="save-button">Guardar Software</button>
                        </div>
                    </div>

                    <div id="storage" class="tab-content">
                        <h3>Opciones de Almacenamiento</h3>
                        <div class="grid-layout">
                            <div class="form-group">
                                <label for="storage-capacity">Capacidades (separar con comas)</label>
                                <input type="text" id="storage-capacity" name="capacidad" value="256GB, 512GB, 1TB">
                            </div>
                            <div class="form-group">
                                <label for="storage-type">Tipo</label>
                                <input type="text" id="storage-type" name="tipo" value="UFS 4.0">
                            </div>
                        </div>
                        <div class="button-group">
                            <button class="save-button">Guardar Almacenamiento</button>
                        </div>
                    </div>

                    <div id="memory" class="tab-content">
                        <h3>Opciones de Memoria RAM</h3>
                        <div class="grid-layout">
                            <div class="form-group">
                                <label for="ram-capacity">Capacidades (separar con comas)</label>
                                <input type="text" id="ram-capacity" name="capacidad" value="8GB, 12GB">
                            </div>
                            <div class="form-group">
                                <label for="ram-type">Tipo</label>
                                <input type="text" id="ram-type" name="tipo" value="LPDDR5X">
                            </div>
                        </div>
                        <div class="button-group">
                            <button class="save-button">Guardar RAM</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const tabButtons = document.querySelectorAll('.tab-button');
        const tabContents = document.querySelectorAll('.tab-content');

        function activateTab(tabId) {
            tabButtons.forEach(btn => btn.classList.remove('active'));
            tabContents.forEach(content => content.classList.remove('active'));

            const clickedButton = document.querySelector(`.tab-button[data-tab="${tabId}"]`);
            if (clickedButton) {
                clickedButton.classList.add('active');
            }

            const targetTabContent = document.getElementById(tabId);
            if (targetTabContent) {
                targetTabContent.classList.add('active');
            }
        }

        tabButtons.forEach(button => {
            button.addEventListener('click', () => {
                const targetTabId = button.dataset.tab;
                activateTab(targetTabId);
            });
        });

        if (tabButtons.length > 0) {
            activateTab(tabButtons[0].dataset.tab);
        }
    });
</script>