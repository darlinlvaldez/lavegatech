<%- include('../../partials/header.ejs') %>

<link rel="stylesheet" href="/css/vendor/leaflet.css"/>
<link rel="stylesheet" href="/css/vendor/toastify.css">
<link type="text/css" rel="stylesheet" href="/css/store/contact.css"/>

<body class="body-contact">
<div class="contactos-page">
    <!-- Start Content Page -->
    <div class="contenedor-principal bg-light py-5">
        <div class="col-md-6 m-auto text-center">
            <h1 class="titulo">Contactanos</h1>
            <p class="texto">
                En <img class="lavega" src="/img/lavegatech-logo.png" type="image/png"> queremos brindarte la mejor experiencia de compra. 
                Si tienes alguna consulta sobre nuestros productos, pedidos o cualquier otro tema, no dudes en contactarnos.
            </p>
        </div>
    </div>
</div>

<div id="mapid"></div>

<div class="input-principal">
    <div class="fila-formulario">
        <form class="formulario-contacto" method="post" action="/api/auth/contact" role="form" id="contactForm">
            <div class="fila-campos">
                <div class="campo-formulario">
                    <label for="nombre">Nombre</label>
                    <input type="text" class="entrada-texto <%= validationErrors?.name ? 'input-error' : '' %>" 
                    id="name" name="name" placeholder="Introduce el nombre" value="<%= name || '' %>">
                    <% if (validationErrors?.name) { %>
                        <p class="field-error">
                        <i class="fa-solid fa-circle-exclamation"></i>
                        <%= validationErrors.name %></p>
                    <% } %>
                </div>
                <div class="campo-formulario">
                    <label for="email">Correo</label>
                    <input type="email" class="entrada-texto <%= validationErrors?.email ? 'input-error' : '' %>" 
                    id="email" name="email" placeholder="ejemplo@gmail.com" value="<%= email || '' %>">
                    <% if (validationErrors?.email) { %>
                        <p class="field-error">
                        <i class="fa-solid fa-circle-exclamation"></i>
                        <%= validationErrors.email %></p>
                    <% } %>
                </div>
            </div>
            <div class="campo-formulario">
                <label for="asunto">Asunto</label>
                <input type="text" class="entrada-texto <%= validationErrors?.affair ? 'input-error' : '' %>" 
                id="affair" name="affair" placeholder="Introduce el asunto" value="<%= affair || '' %>">
                <% if (validationErrors?.affair) { %>
                    <p class="field-error">
                    <i class="fa-solid fa-circle-exclamation"></i>
                    <%= validationErrors.affair %></p>
                <% } %>
            </div>
            <div class="campo-formulario">
                <label for="mensaje" style="margin-top: 20px; display: block;">Mensaje</label>
                <textarea class="entrada-texto <%= validationErrors?.mensaje ? 'input-error' : '' %>" 
                id="message" name="message" placeholder="Escribe tu mensaje..." rows="8"><%= message || '' %></textarea>
                <% if (validationErrors?.message) { %>
                    <p class="field-error"><i class="fa-solid fa-circle-exclamation"></i>
                    <%= validationErrors.message %></p>
                <% } %>
            </div>
            
            <% if (validationErrors?.password) { %>
                <p class="field-error">
                <i class="fa-solid fa-circle-exclamation"></i>
                <%= validationErrors.password %></p>
            <% } %>

            <% if (error && !validationErrors) { %>
                <p class="general-error"><%= error %></p>
            <% } %>
            
            <div class="fila-boton">
                <button type="submit" class="boton-enviar">Enviar</button>
            </div>
        </form>
    </div>
</div>

<% if (success) { %>
<script>
  sessionStorage.setItem("toastSuccess", JSON.stringify({
    message: "Mensaje enviado correctamente",
    type: "success",
    icon: "check-circle"
  }));
</script>
<% } %>
  
  <%- include('../../partials/footer.ejs') %>

</body>

<script src="/js/vendor/leaflet.min.js"></script>
<script src="/js/vendor/toastify.js"></script>

<script src="/js/vendor/map.js"></script>
<script src="/js/utils/flashToast.js" type="module"></script>

</html>